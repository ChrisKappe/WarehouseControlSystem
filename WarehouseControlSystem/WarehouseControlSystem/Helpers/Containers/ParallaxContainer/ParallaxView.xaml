<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseControlSystem.Helpers.Containers.ParallaxContainer.ParallaxView">
  <ContentView.Content>
        <Grid>
            <ContentView x:Name="Header" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            <ScrollView x:Name="ParentScroll" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <ContentView x:Name="Body"/>
            </ScrollView>
        </Grid>
    </ContentView.Content>
</ContentView>