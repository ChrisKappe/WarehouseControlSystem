<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseControlSystem.MainPage"
             xmlns:pages="clr-namespace:WarehouseControlSystem"
             MasterBehavior="Popover">
    <MasterDetailPage.Master>
        <pages:MainPageMaster x:Name="MasterPage" />
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage BarBackgroundColor="{StaticResource PageHeaderBarBackgoundColor}" BarTextColor="White">
            <x:Arguments>
                <pages:MainPageDetail />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>